<!DOCTYPE html>
<html>
  <head>
    <title>BurningServer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="right_nav">
      <% if @current_user.present?%>
        Welcome, <%= @current_user.name%>
        |
        <%= link_to 'Add Airplane', new_airplane_path %>
        |
        <%= link_to 'Add Flight', new_flight_path %>
        |
        <%= link_to 'Logout', login_path, method: :delete%>

      <% else %>
        <%= link_to 'login', login_path%>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
